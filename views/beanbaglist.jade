extends layout

block content
  .content.beanbaglist.page.row
    .row-inner
      h2.page-title All Beanbags: 
        span.question What's important for you right now? 
          a.button(href='newbeanbag') Add New Beanbag
      .beanbag-list
        each beanbag, i in beanbaglist
          .beanbag-item
            h3.beanbag-title 
              =beanbag.beanbagname
              span
                =bagcounts[beanbag.beanbagname]
            ul.beans-list
              each bean, b in beanbag.beans
                -var name = bean.name
                -var beansize = beancounts[name]
                li.bean-item.bean(rel='#{name}',style='font-size:'+ beansize/5 + 'em')
                  a.bean-link.icon-bean1.bean-form(title="#{name}", href="http://en.wikipedia.org/wiki/#{name}")
                    .bean-value.icon-radicle
                      span.bean-count
                        =beancounts[name]
                    span.bean-name
                      =bean.name
                    
                  
      p
        =beancounts.length
      ul
        each n,c in beancounts
          li
            span.bean-name
              =c
            =n
      a.button(href='newbeanbag') Add New Beanbag 
