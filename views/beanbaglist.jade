extends layout

block content
  .content.beanbaglist.page.row
    .row-inner
      h2.page-title Thank You for adding to the Beanbank!  
      .beanbag-list
        each beanbag, i in beanbaglist
          .beanbag-item
            header.bag-info
              h3.beanbag-title 
                =beanbag.beanbagname
              h4.bag-score
                p beanbag score 
                  span
                    =bagcounts[beanbag.beanbagname]
            ul.beans-list
              each bean, b in beanbag.beans
                -var name = bean.name
                -var beansize = beancounts[name]
                li.bean-item.bean(rel='#{name}',style='font-size:'+ ((beansize/16)+ 1) + 'em')
                  a.bean-link.icon-bean1.bean-form(title="#{name}", href="http://en.wikipedia.org/wiki/#{name}",rel='#{beancounts[name]}')
                    .bean-value.icon-bean-radicle
                      span.bean-count
                        =beancounts[name]
                    span.bean-name
                      =bean.name
                  
      .footer-info(style="text-align:center;")       
        p <strong>Beanbag scores are increasing as new people add their own.</strong> 
        p Feel free to add new ones and if you want to get back to this page and check on your beanbag
        p don't forget to tweet about it as the score goes up! If you're not happy with your bag, <a href="http://beanbank.rootbeans.com/newbeanbag">add another one.</a>
        a.button(style="clear:both;float:none;display:block;", href='newbeanbag') Add New Beanbag 
